<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_160mdp"
    android:background="@drawable/bg_white"
    android:gravity="center"
    android:elevation="@dimen/_10mdp"
    app:cardElevation="@dimen/_10mdp"
    app:cardCornerRadius="@dimen/_7mdp"
    android:layout_marginTop="@dimen/_5mdp"
    android:layout_marginRight="@dimen/_5mdp"
    android:layout_marginBottom="@dimen/_5mdp"
    android:outlineSpotShadowColor="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/_96mdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/product_promo_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/_2mdp"
            android:background="@drawable/bg_corner"
            android:maxLines="2"
            android:padding="@dimen/_2mdp"
            android:text="Code: 12dg52d  \n get 20% off"
            android:textColor="@color/orange"
            android:textSize="8sp"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/_75mdp"
            android:layout_height="@dimen/_75mdp"
            android:elevation="@dimen/_10mdp"
            android:padding="@dimen/_1mdp"
            android:scaleType="fitXY"
            android:src="@drawable/img_product" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_5mdp"
            android:paddingRight="@dimen/_5mdp">

            <TextView
                android:id="@+id/product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3mdp"
                android:text="Samsung galaxy a37"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:saveEnabled="true"
                android:isIndicator="true"
                android:progressTint="@color/orange"
                style="?android:attr/ratingBarStyleSmall"
                android:rating="3"
                android:numStars="5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_2mdp">

                <TextView
                    android:id="@+id/product_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="$350"
                    android:layout_centerInParent="true"
                    android:textColor="#F57224"
                    android:textSize="@dimen/_8font_mdp" />
                <TextView
                    android:id="@+id/product_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/product_rate"
                    android:text="$350"
                    android:layout_marginLeft="@dimen/_2mdp"
                    android:layout_centerInParent="true"
                    android:textColor="#9E9EAE"
                    android:textSize="@dimen/_8font_mdp"
                    android:layout_toRightOf="@id/product_rate" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#838383"
                    android:layout_centerInParent="true"
                    android:layout_alignStart="@id/product_discount"
                    android:layout_alignEnd="@id/product_discount"
                    android:layout_alignRight="@id/product_discount"
                    android:layout_alignLeft="@id/product_discount" />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_circle"


                    android:src="@drawable/ic_add"
                    android:tint="@color/white" />


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>