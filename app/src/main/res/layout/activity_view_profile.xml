<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ViewProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/vprofileImage"
        android:layout_width="@dimen/_96mdp"
        android:layout_height="@dimen/_96mdp"
        android:layout_marginTop="@dimen/_40mdp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile"
        app:civ_border_color="@color/blue"
        app:civ_border_width="@dimen/_1mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vaddress_ac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15mdp"
        android:text="Full name"
        app:drawableStartCompat="@drawable/ic_profile"
        android:drawablePadding="@dimen/_7mdp"
        android:drawableTint="@color/black"
        android:padding="@dimen/_8mdp"
        app:layout_constraintEnd_toEndOf="@+id/vprofileImage"
        app:layout_constraintStart_toStartOf="@+id/vprofileImage"
        app:layout_constraintTop_toBottomOf="@+id/vprofileImage" />

    <TextView
        android:id="@+id/vpp_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15mdp"
        android:text="Mobile"
        app:drawableStartCompat="@drawable/ic_phone"
        android:drawablePadding="@dimen/_7mdp"
        android:padding="@dimen/_8mdp"
        app:layout_constraintEnd_toEndOf="@+id/vaddress_ac"
        app:layout_constraintStart_toStartOf="@+id/vaddress_ac"
        app:layout_constraintTop_toBottomOf="@+id/vaddress_ac" />

    <TextView
        android:id="@+id/vpp_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15mdp"
        android:text="Email"
        app:drawableStartCompat="@drawable/ic_email"
        android:drawablePadding="@dimen/_7mdp"
        android:padding="@dimen/_8mdp"
        app:layout_constraintEnd_toEndOf="@+id/vpp_mobile"
        app:layout_constraintStart_toStartOf="@+id/vpp_mobile"
        app:layout_constraintTop_toBottomOf="@+id/vpp_mobile" />

    <TextView
        android:id="@+id/vpp_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15mdp"
        app:drawableStartCompat="@drawable/ic_location"
        android:drawablePadding="@dimen/_7mdp"
        android:text="Region"
        android:padding="@dimen/_8mdp"
        app:layout_constraintEnd_toEndOf="@+id/vpp_email"
        app:layout_constraintStart_toStartOf="@+id/vpp_email"
        app:layout_constraintTop_toBottomOf="@+id/vpp_email" />

    <TextView
        android:id="@+id/vpp_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15mdp"
        app:drawableStartCompat="@drawable/ic_location"
        android:drawablePadding="@dimen/_7mdp"
        android:text="City"
        android:padding="@dimen/_8mdp"
        app:layout_constraintEnd_toEndOf="@+id/vpp_region"
        app:layout_constraintStart_toStartOf="@+id/vpp_region"
        app:layout_constraintTop_toBottomOf="@+id/vpp_region" />

    <TextView
        android:id="@+id/vpp_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15mdp"
        android:drawablePadding="@dimen/_7mdp"
        android:text="Area"
        android:padding="@dimen/_8mdp"
        app:layout_constraintEnd_toEndOf="@+id/vpp_city"
        app:layout_constraintStart_toStartOf="@+id/vpp_city"
        app:layout_constraintTop_toBottomOf="@+id/vpp_city"
        app:drawableStartCompat="@drawable/ic_location" />

    <TextView
        android:id="@+id/vpp_deliveryAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15mdp"
        app:drawableStartCompat="@drawable/ic_location"
        android:drawablePadding="@dimen/_7mdp"
        android:text="delivery address"
        android:padding="@dimen/_8mdp"
        app:layout_constraintEnd_toEndOf="@+id/vpp_area"
        app:layout_constraintStart_toStartOf="@+id/vpp_area"
        app:layout_constraintTop_toBottomOf="@+id/vpp_area" />


</androidx.constraintlayout.widget.ConstraintLayout>